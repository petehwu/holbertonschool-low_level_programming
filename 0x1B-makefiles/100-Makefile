SRC = main.c holberton.c
OBJ = $(SRC:.c=.o) 
NAME = holberton
CFLAGS =  -Wall -Werror -Wextra -pedantic
CC = gcc $(CFLAGS)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(NAME).c
	$(CC) $(SRC) -o $(NAME)

clean: 
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ) 

fclean: clean oclean

re: oclean all

